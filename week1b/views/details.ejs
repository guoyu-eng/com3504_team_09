<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/bootswatch/5.1.0/cosmo/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/show_page.css'>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="#">Bird App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/bird">Birds</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <h1 class="text-center my-3">Showing Page</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <img src="<%= bird.inputImg %>" alt="Bird Image" class="img-fluid rounded bird-image">
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Name:</strong>
                            <span class="ms-2" onclick="updateName(this.previousElementSibling.innerText)">
                                <%= bird.name %>
                                <span class="bi bi-pencil-square"></span>
<!--                                <button type="submit" class="btn btn-primary">Change</button>-->

                            </span>
                        </li>



                        <li class="list-group-item"><strong>Date:</strong> <%= bird.date %></li>
                        <li class="list-group-item"><strong>Details:</strong> <%= bird.details %></li>
                        <li class="list-group-item"><strong>Location:</strong> <%= bird.location %></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3>Change Name</h3>
                    <form method="POST" action="/change_name">
                        @csrf
                        <div class="form-group">
                            <label for="newName">New Name:</label>
                            <input type="text" class="form-control" id="newName" name="newName" required>
                        </div>
                        <div class="form-group">
                            <label for="nickname">Nickname:</label>
                            <input type="text" class="form-control" id="nickname" name="nickname" required>
                        </div>
                        <input type="hidden" name="changeid" value="<%= bird.id.toString() %>">
                        <button type="submit" class="btn btn-primary">Change</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





<script src="../public/javascripts/details.js"></script>
<script src="../public/javascripts/changeName.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/bootstrap-icons.min.js"></script>

</body>
</html>

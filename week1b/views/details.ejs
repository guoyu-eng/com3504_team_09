<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="#">Bird App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/bird">Birds</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <h1 class="text-center my-3">Showing Page</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <img src="<%= bird.inputImg %>" alt="Bird Image" class="img-fluid rounded bird-image">
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <ul class="list-group">
                        <li><span class="list-title"><strong>Name:</strong></span>
                            <span class="list-value"> <%= bird.name %> </span></li>
                        <li><span class="list-title"><strong>Date:</strong></span>
                            <span class="list-value"> <%= bird.date %></span></li>
                        <li><span class="list-title"><strong>Details:</strong></span>
                            <span class="list-value"> <%= bird.details %> </span></li>

                        <li class="lat"><span class="list-title"><strong>Lat:</strong></span>
                            <span class="list-value"> <%= bird.lat %> </span></li>

                        <li class="lng" ><span class="list-title"><strong>Lng:</strong></span>
                            <span class="list-value"> <%= bird.lng %> </span></li>
                        <li class="address"><span class="list-title"><strong>Address:</strong></span>
                            <span class="list-value"> <%= bird.addr %> </span></li>
                        <li class="distance hidden"><span class="list-title"><strong>Distance:</strong></span>
                            <span class="list-value"></span></li>
                        <!--            <li><span class="list-title"><strong>image:</strong></span>-->


                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3>Change Name</h3>
                    <form method="POST" action="/change_name">
                        @csrf
                        <div class="form-group">
                            <label for="newName">New Name:</label>
                            <input type="text" class="form-control" id="newName" name="newName" required>
                        </div>
                        <div class="form-group">
                            <label for="nickname">Nickname:</label>
                            <input type="text" class="form-control" id="nickname" name="nickname" required>
                        </div>
                        <input type="hidden" name="changeid" value="<%= bird.id.toString() %>">
                        <button type="submit" class="btn btn-primary">Change</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



